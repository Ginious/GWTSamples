<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:style>
	.content {
		margin-left: 5px;
		margin-top: 15px;
	}
	</ui:style>

	<b:Column size="12">
		<b:Row addStyleNames="{style.content}">
			<b:Column size="1">
				<b:Label ui:field="lblName" />
			</b:Column>
			<b:Column size="3">
				<b:TextBox ui:field="txtName" />
			</b:Column>
		</b:Row>
		<b:Row addStyleNames="{style.content}">
			<b:Column size="1">
				<b:Label ui:field="lblVorname" />
			</b:Column>
			<b:Column size="3">
				<b:TextBox ui:field="txtVorname" />
			</b:Column>
		</b:Row>
		<b:Row>
			<b:Column size="12">
				<b:Button ui:field="btnSuchen" type="PRIMARY" block="true" />
				<b:Button ui:field="btnZuruecksetzen" block="true" />
			</b:Column>
		</b:Row>
	</b:Column>

</ui:UiBinder> 